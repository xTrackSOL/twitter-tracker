modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord Twitter Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Twitter Feed Test"

[[workflows.workflow]]
name = "Discord Twitter Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

